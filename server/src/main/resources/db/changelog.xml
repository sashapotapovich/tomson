            </column>
            <column name="ssn" type="varchar(15)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="symbol" type="varchar(8)">
                <constraints nullable="false"/>
            </column>
            <column name="quantity" type="bigint"/>
        </createTable>
    </changeSet>
